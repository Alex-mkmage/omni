<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <ey_applications translate="label" module="ey_applications">
            <label>Applications</label>
            <tab>ey_core</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <file translate="label" module="ey_applications">
                    <label>Files</label>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <file_location translate="label" module="ey_applications">
                            <label>File Location</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </file_location>
                        <download_limit translate="label" module="ey_applications">
                            <label>Download Limit</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </download_limit>
                    </fields>
                </file>
                <application translate="label" module="ey_applications">
                    <label>Applications</label>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <excluded_search_word translate="label" module="ey_applications">
                            <label>Excluded search words</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <comment>Separated each word by a comma.</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </excluded_search_word>
                    </fields>
                </application>
                <api translate="label" module="ey_applications">
                    <label>Mendeley API</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <app_id translate="label" module="ey_applications">
                            <label>Application Id</label>
                            <frontend_type>text</frontend_type>
                            <comment>http://dev.mendeley.com/myapps.html</comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </app_id>
                        <app_secret translate="label" module="ey_applications">
                            <label>Application Secret</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </app_secret>
                        <refresh_token translate="label" module="ey_applications">
                            <label>Refresh Token</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>10</sort_order>
                            <comment>https://mendeley-show-me-access-tokens.herokuapp.com/</comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </refresh_token>
                    </fields>
                </api>
                <mendeley translate="label" module="ey_applications">
                    <label>Mendeley Config</label>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <folder_id translate="label" module="ey_applications">
                            <label>Folder Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </folder_id>
                    </fields>
                </mendeley>
                <seo translate="label" module="ey_applications">
                    <label>SEO</label>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <page_title translate="label" module="ey_applications">
                            <label>Page Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </page_title>
                        <meta_keyword translate="label" module="ey_applications">
                            <label>Meta Keywords</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_keyword>
                        <meta_description translate="label" module="ey_applications">
                            <label>Meta Description</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_description>
                    </fields>
                </seo>
                <email translate="label" module="ey_applications">
                    <label>Email</label>
                    <sort_order>70</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <activate translate="label" module="ey_applications">
                            <label>Send a notification when a new application is added</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </activate>
                        <download_activate translate="label" module="ey_applications">
                            <label>Send a notification when a file is download</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </download_activate>
                        <download_email translate="label" module="ey_applications">
                            <label>Send a notification to this email when a file is download</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </download_email>
                        <download_template translate="label" module="ey_applications">
                            <label>Email template ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </download_template>
                    </fields>
                </email>
            </groups>
        </ey_applications>
    </sections>
</config>