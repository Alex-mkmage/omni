<script>
    jQuery(function ($) {
    
        $('.input-text.qty').on('change paste', function(){
            $('.ajaxUpdateQtyLoading').addClass('open');
            var el = $(this);
            var id = $(this).data('product-id');
            <?php $quote = Mage::getSingleton('checkout/session')->getQuote(); ?>
            var quoteId = "<?php echo $quote ? $quote->getId() : '' ?>";
            $.ajax({
                type: 'POST',
                url: '<?php echo Mage::getBaseUrl(); ?>ey/cart/updateqty/',
                data: { qty: $(this).val(), product: id, quote: quoteId },
                success: function(data) {
                    data = $.parseJSON( data );
                    console.log(data);
                    if(data.success == true){
                        if(data.subtotal_with_discount){
                            $('.subtotalValue .price').text(data.subtotal_with_discount);
                        }
                        if(data.tax){
                            $('.taxValue .price').text(data.tax);
                        }
                        if(data.grand_total){
                            $('#shopping-cart-totals-table tfoot .price').text(data.grand_total);
                        }
                        if(data.item_count){
                            $('.itemCount').text(data.item_count);
                        }
                        var qty = parseInt(el.val());
                        var priceText = el.parents('tr').find('.price-wrapper .price').text(), price = parseFloat(priceText.replace(',','').substring(1,priceText.length));
                        var calcSubtotal = parseFloat(qty * price);
                        el.parents('tr').find('.last .cart-price .price').text('$'+calcSubtotal.toLocaleString('en-US', {minimumFractionDigits: 2}));
                    }
                    $('.ajaxUpdateQtyLoading').removeClass('open');
                }, error: function(xhr, ajaxOptions, thrownError){
                    console.log(xhr.responseText);
                    console.log(thrownError);
                    $('.ajaxUpdateQtyLoading').removeClass('open');
                }
            });
        });
    });
</script>