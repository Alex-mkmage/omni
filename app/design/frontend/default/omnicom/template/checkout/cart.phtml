<script>
    jQuery(function ($) {
        $('.ajaxUpdateQtyLoading').appendTo('body');

        jQuery(".cart .shipping h2").click(function(e) {
            if(jQuery(this).parent().hasClass('expand')){
                jQuery(this).parent().removeClass('expand');
            } else{
                jQuery(this).parent().addClass('expand');
            }a
        });

        $('.spin-up').unbind("click").on('click',function(){
            var id = $(this).data('product-id');
            var qty = $('.input-text.qty[data-product-id="'+id+'"]').val();
            $('.input-text.qty[data-product-id="'+id+'"]').val(parseInt(qty)+1);
            $('.input-text.qty[data-product-id="'+id+'"]').trigger('change');
        });

        $('.spin-down').unbind("click").on('click',function(){
            var id = $(this).data('product-id');
            var qty = $('.input-text.qty[data-product-id="'+id+'"]').val();
            $('.input-text.qty[data-product-id="'+id+'"]').val(parseInt(qty)-1);
            $('.input-text.qty[data-product-id="'+id+'"]').trigger('change');
        });

        $('.input-text.qty').on('change paste', function(){
            $('.ajaxUpdateQtyLoading').addClass('open');
            var id = $(this).data('product-id');
            <?php $quote = Mage::getSingleton('checkout/session')->getQuote(); ?>
            var quoteId = "<?php echo $quote ? $quote->getId() : '' ?>";
            $.ajax({
                type: 'POST',
                url: '<?php echo Mage::getBaseUrl(); ?>ey/cart/updateqty/',
                data: { qty: $(this).val(), product: id, quote: quoteId },
                success: function(data) {
                    data = $.parseJSON( data );
                    console.log(data);
                    if(data.success == true){
                        if(data.subtotal_with_discount){
                            $('.subtotalValue .price').text(data.subtotal_with_discount);
                        }
                        if(data.tax){
                            $('.taxValue .price').text(data.tax);
                        }
                        if(data.grand_total){
                            $('.grandValue .price').text(data.grand_total);
                        }
                        if(data.item_count){
                            $('.itemCount').text(data.item_count);
                        }
                    }
                    $('.ajaxUpdateQtyLoading').removeClass('open');
                }, error: function(xhr, ajaxOptions, thrownError){
                    console.log(xhr.responseText);
                    console.log(thrownError);
                    $('.ajaxUpdateQtyLoading').removeClass('open');
                }
            });
        });
    });
</script>
