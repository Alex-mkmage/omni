<?php
    $columns = $this->getColumns();
?>
<table class="data-table responsive" id="wishlist-table">
    <thead>
        <tr>
            <th>
            <?php foreach ($columns as $column): ?>
                <?php
                    $_title = '';
                    if($column->getTitle())
                        $_title = $column->getTitle();
                    else
                        $_title = '&nbsp;';
                ?>
                <span><?php echo $_title ?></span>
            <?php endforeach; ?>
            </th>
        </tr>
    </thead>
    <tbody>
        <?php if (count($this->getItems())): ?>
            <?php foreach ($this->getItems() as $item): ?>
                <tr id="item_<?php echo $item->getId();?>">
                    <td>
                    <?php
                        $cnt_all = count($columns);
                        $cnt = 0;
                    ?>
                    <?php foreach ($columns as $column): ++$cnt; ?>
                        <?php
                            $class_td = '';
                            if($cnt == 1) $class_td = ' first';
                            if($cnt == 3) $class_td = ' add';
                            if($cnt == $cnt_all) $class_td = ' last';
                        ?>
                        <div class="td<?php echo $class_td ?>"><?php $column->setItem($item); echo $column->toHtml($item);?></div>
                    <?php endforeach; ?>
                    </td>
                </tr>
            <?php endforeach ?>
        <?php else: ?>
            <td colspan="<?php echo count($columns);?>" class="wishlist-empty"><?php echo $this->__('This Wishlist has no Items');?></td>
        <?php endif; ?>
    </tbody>
</table>
<?php foreach ($columns as $column): ?>
    <?php echo $column->getAdditionalHtml();?>
<?php endforeach; ?>
<script type="text/javascript">
//<![CDATA[
    decorateTable('wishlist-table');

<?php foreach ($columns as $column): ?>
    <?php echo $column->getJs();?>
<?php endforeach; ?>
//]]>
</script>
